<div class="container">
  <h1>New Game</h1>
  <% @letters.each do |lt| %>
    <span class="letter"><%= lt %></span>
  <% end %>
  <form action="score" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <label for="suggestion">What is the longest word you can find?</label>
    <br>
    <input type="text" name="suggestion" id="suggestion">
    <input class="btn" type="submit" value="Play">
    <input type="hidden" name="grid" value="<%= @letters.to_s %>">
    <!-- <%= hidden_field_tag :grid, @letters.to_s %> -->
    <input type="hidden" name="start" value="<%= Time.now() %>">
    <!-- <%= hidden_field_tag :start, Time.now() %> -->
  </form>
</div>